<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".MainActivity">

    <!-- 顶部栏 -->
    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/colorTitle"
        android:orientation="horizontal">

        <!-- 返回 -->
        <ImageView
            android:id="@+id/backtrack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/toleft_gray"/>

        <!-- 标题 -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>

    <!-- 界面主要内容容器 -->
    <RelativeLayout
        android:id="@+id/contentPanel"
        android:layout_below="@id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/LinearLayout_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/LinearLayout_add_friend"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_add_friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="找人"
                        android:textColor="@color/colorBlack"/>
                    <RelativeLayout
                        android:id="@+id/RelativeLayout_friend_line"
                        android:layout_width="70dp"
                        android:layout_height="2dp"
                        android:background="@color/colorTitle">
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearLayout_add_group"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_add_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:text="找群"
                        android:textColor="@color/colorBlack"/>
                    <RelativeLayout
                        android:id="@+id/RelativeLayout_group_line"
                        android:layout_width="70dp"
                        android:layout_height="2dp"
                        android:background="@color/colorTitle">
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        <RelativeLayout
            android:id="@+id/RelativeLayout_search_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LinearLayout_add">
            <RelativeLayout
                android:id="@+id/RelativeLayout_line_top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBF">
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RelativeLayout_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_below="@id/RelativeLayout_line_top">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toLeftOf="@id/bt_search"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="20dp"
                        android:text="T"
                        android:textColor="@color/colorBF"
                        android:background="@drawable/search_edittext"/>
                    <Button
                        android:id="@+id/bt_search"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="查找"
                        android:textSize="14sp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/title_10_radius"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RelativeLayout_line_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/RelativeLayout_search"
                android:background="@color/colorBF">
            </RelativeLayout>
        </RelativeLayout>
        <!-- 找人或者群聊的ListView -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RelativeLayout_search_info"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/dynamic_mine_light"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/search_icon"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="Tom的群聊"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                />


        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>